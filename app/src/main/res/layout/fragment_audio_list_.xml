<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".textToSpeech.fragments.AudioList_Fragment"
    android:background="@color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rel_tuning"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_height="55dp">

                <View
                    android:id="@+id/homeFragment_myalert_dividerHeadingSide_view"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#1b5383" />


                <TextView
                    android:id="@+id/homeFragment_myalertHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/homeFragment_myalert_dividerHeadingSide_view"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Topic Speeches"
                    android:textColor="#1b5383"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/homeFragment_dividerAlertLine_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/homeFragment_myalertHeading_tv"
                    android:background="@drawable/divider" />

            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_audio_topic_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:id="@+id/rel_tuning2"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_height="55dp">

                <View
                    android:id="@+id/homeFragment_myalert_dividerHeadingSide_view2"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#1b5383" />


                <TextView
                    android:id="@+id/homeFragment_myalertHeading_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/homeFragment_myalert_dividerHeadingSide_view2"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Interview Speeches"
                    android:textColor="#1b5383"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/homeFragment_dividerAlertLine_view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/homeFragment_myalertHeading_tv2"
                    android:background="@drawable/divider" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_audio_interview_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:id="@+id/rel_tuning3"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_height="55dp">

                <View
                    android:id="@+id/homeFragment_myalert_dividerHeadingSide_view3"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#1b5383" />


                <TextView
                    android:id="@+id/homeFragment_myalertHeading_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/homeFragment_myalert_dividerHeadingSide_view3"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="All Speeches"
                    android:textColor="#1b5383"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/homeFragment_dividerAlertLine_view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/homeFragment_myalertHeading_tv3"
                    android:background="@drawable/divider" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_audio_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_showgraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/chart_icon"
        app:backgroundTint="@color/white"
        app:borderWidth="3dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:tint="@null"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>