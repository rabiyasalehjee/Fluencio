<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_staff_startswith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        app:cardCornerRadius="5dp"
        android:visibility="visible"
        app:cardBackgroundColor="#FFF"
        app:cardUseCompatPadding="true"
        android:background="#FFF">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:background="@drawable/dialog_styles"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:text="Please Enter Code"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/delete_image_view"
                app:layout_constraintStart_toEndOf="@+id/list_image_view"
                app:layout_constraintTop_toTopOf="@+id/list_image_view" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_email_textfield"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:elevation="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Code">

                <EditText
                    android:id="@+id/edt_email"
                    app:elevation="5dp"
                    android:backgroundTint="#EDEDED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_style"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textColorHint="#DEE0E9" />

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="172dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/style"
                android:text="Submit"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>